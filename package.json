{
  "name": "megumitagawa.com",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "build": "nuxt build --dotenv .env.production",
    "dev": "nuxt dev --dotenv .env.development",
    "generate": "nuxt generate --dotenv .env.production && node bin/create-local-images.mjs && node bin/create-webp-images.mjs",
    "preview": "nuxt preview",
    "postinstall": "node bin/fix-untyped.mjs && nuxt prepare",
    "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
    "lint:prettier": "prettier --check --ignore-unknown --ignore-path .gitignore . '!CHANGELOG.md'",
    "lint": "npm run lint:prettier && npm run lint:js && npm run lint:style",
    "lintfix": "npm run lint:prettier -- --write && npm run lint:js -- --fix && npm run lint:style -- --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "nuxt typecheck . && eslint --cache",
    "*.{css,scss,sass,html,vue}": "stylelint",
    "!CHANGELOG.md": "prettier --check --ignore-unknown"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@contentful/rich-text-types": "^16.0.2",
    "@nuxtjs/eslint-config-typescript": "^12.0.0",
    "@pinia/nuxt": "^0.4.6",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@sentry/tracing": "^7.23.0",
    "@sentry/vue": "^7.23.0",
    "contentful": "^10.0.0-beta-v10.8",
    "contentful-rich-text-vue-renderer": "^3.0.1",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-nuxt": "^4.0.0",
    "eslint-plugin-vue": "^9.8.0",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.0.4",
    "nuxt": "^3.0.0",
    "prettier": "^2.8.0",
    "semantic-release": "^20.0.2",
    "sharp": "^0.31.3",
    "stylelint": "^14.15.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-config-standard": "^29.0.0",
    "tailwindcss": "^3.2.4",
    "viewport-extra": "^2.1.4",
    "vue-gtag-next": "^1.14.0"
  }
}
